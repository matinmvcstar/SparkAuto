@page
@model SparkAuto.Pages.ServiceTypes.CreateModel
@{
    ViewData["Title"] = "ورود خدمت جدید";
}

<br />
<br />
<h2 class="text-right">ورود اطلاعات</h2>

<form method="post">
    <div class="border bg-white">
        <br />
        <div class="form-group row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-2">
                <label>نام سرویس</label>
            </div>
            <div class="col-5">
                <input asp-for="ServiceType.Name" class="form-control" />
                <span asp-validation-for="ServiceType.Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label>اجرت سرویس</label>
            </div>
            <div class="col-5">
                <input asp-for="ServiceType.Price" class="form-control" />
                <span asp-validation-for="ServiceType.Price" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_CreateAndBackToListButton" />
            </div>
        </div>
    </div>
</form>

@section Scripts{ 
        @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
 }